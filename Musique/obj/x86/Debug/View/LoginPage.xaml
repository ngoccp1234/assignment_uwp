<Page
    x:Class="Musique.View.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="10"></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="10"></Setter>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="10"></Setter>
        </Style>
        
    </Page.Resources>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="1"   FontWeight="Bold" FontSize="20">Login</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0">Email</TextBlock>
        <TextBox x:ConnectionId='2' x:Name="Email" Grid.Row="1" Grid.Column="1" Width="250"></TextBox>
        <TextBlock Grid.Row="2" Grid.Column="0">Password</TextBlock>
        <PasswordBox x:ConnectionId='3' x:Name="Password" Grid.Row="2" Grid.Column="1"  Width="250"></PasswordBox>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
            <Button x:ConnectionId='4' Margin="10"                  >Submit</Button>
            <Button>Reset</Button>
            <HyperlinkButton x:ConnectionId='5' Margin="20,0,0,0"                    >Or Register</HyperlinkButton>

        </StackPanel>
       


    </Grid>
</Page>

